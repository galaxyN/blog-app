---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SlideView from '../components/SlideView.astro';
import Classiify from './index/classify.astro';
import Hot from './index/hot.astro';
import News from './index/news.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<link rel="stylesheet" href="//at.alicdn.com/t/c/font_4964805_jn9mp6c03.css">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<SlideView />
			<Classiify />
			<Hot />
			<News />
		</main>
		<Footer />
	</body>
</html>

<style>
	html{
		font-size: 16px;
	}
	main{
		background: #efefef;
		max-width: 100%;
		padding: 0 1em;
	}
</style>
